<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.stratostech.reservos.client.ui.home">
	<ui:style>
		.mainPanel { /*border: 2px solid blue;*/
			
		}
		
		.header,.footer {
			background: #444;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM' styleName="{style.mainPanel}">
		<g:north size='2'>
			<g:HorizontalPanel styleName="{style.header}"
				width="100%" height="100%"></g:HorizontalPanel>
		</g:north> 
 		<g:center>
			<p1:FormSearch />
		</g:center>
		<g:south size='2'>
			<g:HorizontalPanel styleName="{style.footer}"
				width="100%" height="100%"></g:HorizontalPanel>
		</g:south>
		<g:east size="7.5">
			<g:Label text="Help"/>
		</g:east>
		<g:west size="7.5">
			<g:Label/>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder> 